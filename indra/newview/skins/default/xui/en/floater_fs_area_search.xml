<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
    name="area_search"
    title="SEARCH THE LOCAL AREA FOR OBJECTS"
    width="600"
    height="400"
    min_width="510"
    min_height="250"
    can_resize="true"
    can_minimize="true"
    can_close="true"
    can_drag_on_left="false">

    <floater.string name="pending_string">
        ([PENDING] Pending)
    </floater.string>

    <layout_stack
        name="filter_panels"
        layout="topleft"
        follows="top|left|right"
        top="5"
        left="10"
        right="-10"
        width="580"
        height="51"
        mouse_opaque="false"
        orientation="horizontal">
        <layout_panel
            name="filter_panel_left"
            layout="topleft"
            follows="top|left|right"
            width="287"
            height="51"
            mouse_opaque="false"
            auto_resize="true">
            <filter_editor
                name="name_filter"
                label="Filter by object name"
                layout="topleft"
                follows="top|left|right"
                top="0"
                left="0"
                height="23"
                width="287"
                max_length="256"
                mouse_opaque="true" />
            <filter_editor
                name="owner_filter"
                label="Filter by owner name"
                layout="topleft"
                follows="top|left|right"
                top_pad="5"
                left="0"
                width="287"
                height="23"
                max_length="256"
                mouse_opaque="true" />
        </layout_panel>
        <layout_panel>
            name="filter_panel_left"
            layout="topleft"
            follows="top|left|right"
            left_pad="5"
            width="288"
            height="51"
            mouse_opaque="false"
            auto_resize="true">
            <filter_editor
                name="description_filter"
                label="Filter by object description"
                layout="topleft"
                follows="top|left|right"
                top="0"
                left="0"
                width="288"
                height="23"
                max_length="256"
                mouse_opaque="true" />
            <filter_editor
                name="group_filter"
                label="Filter by group name"
                layout="topleft"
                follows="top|left|right"
                top_pad="5"
                left="0"
                width="288"
                height="23"
                max_length="256"
                mouse_opaque="true" />
        </layout_panel>
    </layout_stack>

    <text
        name="include_types_text"
        layout="topleft"
        follows="top|left"
        top_pad="5"
        left="10"
        height="20"
        width="100"
        mouse_opaque="false">
           Objects to include:
    </text>
    <check_box
        name="physical_checkbox"
        label="Physical"
        tool_tip="Include objects that use physics"
        layout="topleft"
        follows="top|left"
        top_delta="-4"
        left_pad="10"
        height="20"
        width="70"
        initial_value="false" />
    <check_box
        name="temporary_checkbox"
        label="Temporary"
        tool_tip="Include temporary objects"
        layout="topleft"
        follows="top|left"
        top_delta="0"
        left_pad="10"
        height="20"
        width="80"
        initial_value="false" />
    <check_box
        name="attachments_checkbox"
        label="Attached to an avatar"
        tool_tip="Include objects that are attached to an avatar"
        layout="topleft"
        follows="top|left"
        top_delta="0"
        left_pad="10"
        height="20"
        width="140"
        initial_value="false" />
    <check_box
        name="others_checkbox"
        label="Others"
        tool_tip="Include objects that are not physical, temporary or attachments"
        layout="topleft"
        follows="top|left"
        top_delta="0"
        left_pad="10"
        height="20"
        width="60"
        initial_value="true" />

    <scroll_list
        name="result_list"
        layout="topleft"
        follows="all"
        top="80"
        bottom="-35"
        left="10"
        right="-10"
        column_padding="0"
        draw_heading="true"
        can_resize="true"
        multi_select="false">
        <column
            name="name_column"
            label="Name"
            relative_width="0.3" />
        <column
            name="description_column"
            label="Description"
            relative_width="0.3" />
        <column
            name="owner_column"
            label="Owner"
            relative_width="0.2" />
        <column
            name="group_column"
            label="Group"
            relative_width="0.2" />
    </scroll_list>

    <menu_button
        name="options_menu_btn"
        tool_tip="Show additional options"
        layout="topleft"
        follows="bottom|left"
        bottom="-5"
        left="9"
        height="25"
        width="32"
        image_hover_unselected="Toolbar_Left_Over"
        image_selected="Toolbar_Left_Selected"
        image_unselected="Toolbar_Left_Off"
        image_overlay="OptionsMenu_Off" />
    <button
        name="refresh_btn"
        label="Refresh List"
        tool_tip="Reload the object list to find new objects rezzed since the last load"
        layout="topleft"
        follows="bottom|left"
        left_pad="5"
        bottom="-5"
        height="25"
        width="100"
        image_hover_unselected="Toolbar_Middle_Over"
        image_selected="Toolbar_Middle_Selected"
        image_unselected="Toolbar_Middle_Off"
        image_overlay="Refresh_Off"
        image_overlay_alignment="left"
        mouse_opaque="true" />
    <text
        name="status_text"
        type="string"
        layout="topleft"
        follows="bottom|left"
        top_delta="6"
        left_pad="8"
        height="25"
        width="360"
        visible="false">
            [LISTED] Objects Listed [PENDING]
    </text>

    <progress_bar
        name="status_progress"
        tool_tip="Re-request details of all of the listed objects from the simulator"
        layout="topleft"
        follows="bottom|right"
        bottom="-8"
        right="-10"
        height="16"
        width="100"
        color_bar="FrogGreen" />
</floater>
