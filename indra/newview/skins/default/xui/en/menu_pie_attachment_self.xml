<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<pie_menu
    name="Attachment Pie">

    <pie_slice
        label="Profile..."
        name="Profile...">
        <pie_slice.on_click
            function="ShowAgentProfile"
            parameter="agent" />
    </pie_slice>
    <pie_slice
        enabled="false"
        label="Drop"
        name="Drop">
        <pie_slice.on_click
            function="Attachment.Drop" />
        <pie_slice.on_enable
            function="Attachment.EnableDrop" />
    </pie_slice>
    <pie_slice
        label="Sit Here"
        start_autohide="true"
        name="Sit Down Here">
        <pie_slice.on_click
            function="Self.SitDown"
            parameter="" />
        <pie_slice.on_enable
            function="Self.EnableSitDown" />
    </pie_slice>
    <pie_slice
        label="Stand Up"
        autohide="true"
        name="Stand Up">
        <pie_slice.on_click
            function="Self.StandUp" />
        <pie_slice.on_enable
            function="Self.EnableStandUp" />
    </pie_slice>
    <pie_slice
        enabled="false"
        label="Detach"
        name="Detach">
        <pie_slice.on_click
            function="Attachment.Detach" />
        <pie_slice.on_enable
            function="Attachment.EnableDetach" />
    </pie_slice>
    <pie_slice
        label="Gestures..."
        name="Gestures">
        <pie_slice.on_click
            function="Floater.Toggle"
            parameter="gestures" />
    </pie_slice>
    <pie_menu
        label="Appearance &gt;"
        name="Appearance &gt;">

        <pie_slice label="Edit Shape"
            name="Edit My Shape">
           <pie_slice.on_click
               function="EditShape" />
           <pie_slice.on_enable
               function="Edit.EnableEditShape" />
        </pie_slice>
		<pie_menu
			name="ResetMenu"
			label="Reset &gt;">
			<pie_slice
				label="Skel. &amp; Anim."
				name="Reset Skeleton And Animations">
				<pie_slice.on_click
					function="Avatar.ResetSkeletonAndAnimations" />
			</pie_slice>
			<pie_slice
				label="Skeleton"
				name="Reset Skeleton">
				<pie_slice.on_click
					function="Avatar.ResetSkeleton" />
			</pie_slice>
		</pie_menu>
        <pie_separator />
        <pie_separator />
			  <pie_slice label="Reload My Outfit"
					layout="topleft"
					name="Reload Outfit">
			    <pie_slice.on_click
			     function="ReloadOutfit" />
			    <pie_slice.on_enable
			     function="Edit.ReloadOutfit" />
			  </pie_slice>
        <pie_separator />

        <pie_slice label="Edit Outfit"
           layout="topleft"
           name="Edit My Outfit">
           <pie_slice.on_click
               function="EditOutfit" />
           <pie_slice.on_enable
               function="Edit.EnableCustomizeAvatar" />
        </pie_slice>

		<pie_slice
		 label="Hover Height"
		 name="Hover Height">
			<pie_slice.on_click
			 function="HoverHeight" />
			<pie_slice.on_enable
			 function="Edit.EnableHoverHeight" />
		</pie_slice>		
    </pie_menu>
    <pie_menu
        name="Attachment Pie More"
        label="More &gt;">

        <pie_slice
            enabled="true"
            label="Tex Refresh"
            name="Texture Refresh">
            <pie_slice.on_click
                function="Object.TexRefresh" />
        </pie_slice>
        <pie_menu
            label="Scripts &gt;"
            name="ScriptsMenu">
            
            <pie_slice
                enabled="false"
                label="Compile (Mono)"
                name="CompileMono">
                <pie_slice.on_click
                    function="Tools.SelectedScriptAction"
                    parameter="compile mono" />
                <pie_slice.on_enable
                    function="EditableSelectedMono" />
            </pie_slice>

			<pie_slice
				enabled="false"
				label="Compile (LSL)"
				name="CompileLSL">
				<pie_slice.on_click
					function="Tools.SelectedScriptAction"
					parameter="compile lsl" />
				<pie_slice.on_enable
					function="EditableSelected" />
			</pie_slice>

			<pie_slice
				enabled="false"
				label="Reset Scripts"
				name="Object Reset Scripts">
				<pie_slice.on_click
					function="Tools.SelectedScriptAction"
					parameter="reset" />
				<pie_slice.on_enable
					function="EditableSelected" />
			</pie_slice>

			<pie_slice
				enabled="false"
				label="Run Scripts"
				name="Object Set Scripts to Running">
				<pie_slice.on_click
					function="Tools.SelectedScriptAction"
					parameter="start" />
				<pie_slice.on_enable
					function="EditableSelected" />
			</pie_slice>

			<pie_slice
				enabled="false"
				label="Stop Scripts"
				name="Object Set Scripts to Not Running">
				<pie_slice.on_click
					function="Tools.SelectedScriptAction"
					parameter="stop" />
				<pie_slice.on_enable
					function="EditableSelected" />
			</pie_slice>
      <pie_slice
      	enabled="false"
         label="Locate Scripts"
         name="Locate scripts within this object">
        <pie_slice.on_click
           function="Tools.SelectedScriptAction"
           parameter="locate" />
      <pie_slice.on_enable
       function="EnableEdit" />
      </pie_slice>
      <pie_slice
      	enabled="false"
         label="Detail Scripts"
         name="Detail scripts within this object">
        <pie_slice.on_click
           function="Tools.SelectedScriptAction"
           parameter="locate full" />
      <pie_slice.on_enable
       function="EnableEdit" />
      </pie_slice>
      <pie_slice
      	enabled="false"
         label="DELETE Scripts"
         name="Delete scripts within this object">
        <pie_slice.on_click
           function="Tools.SelectedScriptAction"
           parameter="delete" />
      <pie_slice.on_enable
       function="EditableSelected" />
      </pie_slice>
		
		</pie_menu>
		  <pie_slice
		      label="Object Profile"
		      name="Object Inspect">
		    <pie_slice.on_click
		        function="Object.Inspect" />
		    <pie_slice.on_enable
		        function="Object.EnableInspect" />
		  </pie_slice>		
		  <pie_slice
		      label="Object Inspect"
		      name="Object Inspector">
		    <pie_slice.on_click
		        function="Object.FullInspect" />
		    <pie_slice.on_enable
		        function="Object.EnableInspect" />
		  </pie_slice>  
        <pie_slice
            enabled="false"
            label="Touch"
            name="Attachment Object Touch">
            <pie_slice.on_click
                function="Object.Touch" />
            <pie_slice.on_enable
                function="Object.EnableTouch"
                name="EnableTouch"/>
        </pie_slice>
        <pie_slice
            enabled="true"
            label="Derender"
            name="Derender">
            <pie_slice.on_click
                function="Object.Derender" />
        </pie_slice>
	<pie_slice
         enabled="false"
         label="Export"
         name="Export">
         <pie_slice.on_click
            function="Object.Export" />
         <pie_slice.on_enable
            function="Object.EnableExport" />
        </pie_slice>
        <pie_separator name="inspect_placeholder" />
        <pie_separator/>
            <pie_slice
                label="Textures"
                name="Debug...">
                <pie_slice.on_click
                    function="Avatar.Debug" />
            </pie_slice>

    </pie_menu>
    <pie_slice
        enabled="false"
        label="Edit"
        name="Edit...">
        <pie_slice.on_click
            function="Object.Edit" />
        <pie_slice.on_enable
            function="EnableEdit" />
    </pie_slice>

</pie_menu>
